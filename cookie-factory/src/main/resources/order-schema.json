{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://cookiefactory/schemas/order.json",
	"type": "object",
	"properties": {
		"flavour": {
			"type": "string",
			"enum": ["vanilla", "chocolate", "fortune"],
			"default" : "vanilla"
		},
		"quantity": {
			"type": "integer",
			"minimum": 1,
			"maximum": 1000
		}
	},
	"required": [
		"quantity"
	]
}